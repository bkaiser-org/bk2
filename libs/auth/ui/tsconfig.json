    {"path": "../../shared/models/tsconfig.lib.json"},
    {"path": "../../shared/pipes/tsconfig.lib.json"},
    {"path": "../../shared/ui/tsconfig.lib.json"},
    {"path": "../../auth/util/tsconfig.lib.json"}
  ]
}
