{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["es2021", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bk2/shared-constants": ["dist/libs/shared/constants/src"],
      "@bk2/shared-models": ["dist/libs/shared/models/src"],
      "@bk2/shared-util-core": ["dist/libs/shared/util-core/src"],
      "@bk2/shared-util-functions": ["dist/libs/shared/util-functions/src"],
      "@bk2/*": ["dist/libs/*/src"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}