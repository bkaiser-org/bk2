/*
 This config contains both the browser and server build configurations. 
 The application builder extracts the parts needed for the browser build and the server build with Tree Shaking.
*/
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"]
  },
  "files": [
    "src/main.ts",
    "src/main.server.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}
