{
  "name": "functions",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/functions/src",
  "projectType": "application",
  "tags": ["type:app", "scope:functions", "platform:node"],
  "implicitDependencies": [
    "shared-constants",
    "shared-models",
    "shared-util-core",
    "shared-util-functions"
  ],
  "targets": {
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write ."
      }
    },
    "format:check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --check ."
      }
    },
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/functions",
        "main": "apps/functions/src/main.ts",
        "tsConfig": "apps/functions/tsconfig.app.json",
        "assets": ["apps/functions/src/assets", "apps/functions/package.json"],
        "generatePackageJson": true,
        "bundle": true,
        "thirdParty": true,
        "skipTypeCheck": true,
        "format": ["cjs"],
        "platform": "node",
        "external": [
          "firebase-admin",
          "firebase-functions",
          "@google-cloud/*"
        ],
        "esbuildOptions": {
          "logLevel": "info",
          "keepNames": true
        }
      },
      "configurations": {
        "development": {},
        "production": {
          "sourcemap": false,
          "minify": true
        }
      }
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "functions:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "functions:build:development"
        },
        "production": {
          "buildTarget": "functions:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
