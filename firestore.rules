rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  	match /{document=**} {
    	allow read, write: if request.auth != null;
  	}
    match /app-config/{tenant} {
      allow read: if true;
    }

    match /menuItems/{menuItem} {
      allow get: if true;
      allow list: if true;
    }
    match /pages2/{page} {
      allow get: if true;
      allow list: if true;
    }
    match /sections3/{section} {
      allow get: if true;
      allow list: if true;
    }
    match /users3/{uid} {
      allow get: if true;
      allow list: if true;
    }
    match /tags/{tagid} {
      allow get: if true;
      allow list: if true;
    }
    match /orgs/{orgid} {
      allow get: if true;
      allow list: if true;
    }
    match /persons/{pid} {
      allow get: if true;
      allow list: if true;
    }
    match /resources6/{uid} {
      allow get: if true;
      allow list: if true;
    }
  }
}

